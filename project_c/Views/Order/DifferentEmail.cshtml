@model project_c.Models.DifferentEmail

<h2>Voer hier uw gewenste Emailadres in:</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EmailChanged">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Email</label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <label style="color: white">Dit is een cadeau </label>
                <input type="checkbox" name="isGift" value="true" />
                <br />
                <input type="submit" value="Create" class="btn btn-default" required />
            </div>
        </form>
    </div>
</div>
