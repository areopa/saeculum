@page
@model project_c.Areas.Identity.Pages.Account.GebruikersList.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Verwijderen</h2>

<h3>Weet je zeker dat je dit account wil verwijderen?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Naam
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ApplicationUser.FirstName)
        </dd>
        <dt>
            Achternaam
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ApplicationUser.FamilyName)
        </dd>
        <dt>
            Geboortedatum
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ApplicationUser.BirthDate)
        </dd>
        <dt>
            Account aanmaak datum
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ApplicationUser.AccountCreated)
        </dd>
        <dt>
            Account type
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ApplicationUser.AccountType)
        </dd>
        <dt>
            Emailadres
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ApplicationUser.Email)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="ApplicationUser.Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
